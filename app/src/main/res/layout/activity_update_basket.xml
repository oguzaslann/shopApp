<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateBasketActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="15dp"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:background="@drawable/border_title"
            android:gravity="center"
            android:padding="10dp"
            android:text="Alışveriş Listesi Güncelleme"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            />


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Liste adı"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/orderDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:hint="Alışveriş Tarihi"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/changeDateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edittext_tarih"
                android:layout_toEndOf="@+id/edittext_tarih"
                android:layout_toRightOf="@+id/edittext_tarih"
                android:text="Tarih Seç" />
        </LinearLayout>

        <EditText
            android:id="@+id/orderLocName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Yer ismi"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/orderLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Yer lokasyon bilgisi"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Not"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="150dp" />

            <Button
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fiş ekle" />
        </LinearLayout>

        <Button
            android:id="@+id/senderButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@color/eagleGreen"
            android:text="Güncelle"
            android:textAlignment="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>