<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasketInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="15dp"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:background="@drawable/border_title"
            android:gravity="center"
            android:padding="10dp"
            android:text="Alışveriş Listesi Görüntüleme"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            />


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Liste adı"
            android:inputType="none"
            android:focusable="false"
            android:clickable="false"
            android:cursorVisible="false"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/orderDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:hint="Alışveriş Tarihi"
                android:layout_marginTop="10dp"
                android:inputType="none"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false" />
        </LinearLayout>

        <EditText
            android:id="@+id/orderLocName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Yer ismi"
            android:inputType="none"
            android:focusable="false"
            android:clickable="false"
            android:cursorVisible="false" />


        <EditText
            android:id="@+id/orderLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Yer lokasyon bilgisi"
            android:inputType="none"
            android:focusable="false"
            android:clickable="false"
            android:cursorVisible="false" />

        <EditText
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Not"
            android:inputType="none"
            android:focusable="false"
            android:clickable="false"
            android:cursorVisible="false" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recylerview3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/listSizeValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="150dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/updateBasketButton"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:textSize="10dp"
                android:text="Guncelle"
                />
            <Button
                android:id="@+id/deleteBasketButton"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:text="Sil"
                />
            <Button
                android:id="@+id/shareBasketButton"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:text="Paylaş"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>